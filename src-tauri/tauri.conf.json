{
  "identifier": "com.terracrypt.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4001",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Terracrypt Desktop",
        "width": 400,
        "height": 500,
        "decorations": true,
        "transparent": false,
        "center": true,
        "minWidth": 400,
        "minHeight": 300
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/128x128.png",
      "icons/96x96.png",
      "icons/64x64.png",
      "icons/48x48.png",
      "icons/32x32.png",
      "icons/16x16.png",
      "icons/favicon-16x16.png",
      "icons/favicon-32x32.png",
      "icons/favicon-96x96.png"
    ],
    "resources": [
      "chat.db"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
  