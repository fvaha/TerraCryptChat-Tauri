{
  "name": "terracrypt-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:preview": "tauri preview",
    "tauri:build:macos": "tauri build --target aarch64-apple-darwin",
    "tauri:build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "tauri:build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "tauri:build:all": "npm run tauri:build:macos && npm run tauri:build:linux && npm run tauri:build:windows",
    "create:db": "node -e \"const fs = require('fs'); const path = require('path'); const dbPath = path.join(__dirname, 'src-tauri', 'chat.db'); if (!fs.existsSync(dbPath)) { fs.writeFileSync(dbPath, ''); console.log('Created empty database file for bundling'); } else { console.log('Database file already exists'); }\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-notification": "^2.3.0",
    "@types/react-router-dom": "^5.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tauri-apps/cli": "^2.7.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.1",
    "vite": "^7.0.5"
  }
}
